<% provide(:title, @student.name)%>
<section id="student">
  <div class="container">
		<div class="row">
			<aside class="col-md-3 mt-3">
				<div class="text-center"><%= image_tag 'user.png', alt: 'プロフイール画像', size: "225x225", class: "avatar mb-3" %></div>
				<div class="card">
					<div class="card-header">
						<h5 class="mb-0">生徒情報</h5>
					</div>
					<div class="card-body">
						<p class="mb-auto"><strong>　氏名　　　</strong>    <%= @student.name %></p>
						<hr>
						<p class="mb-auto"><strong>　学年　　　</strong>    <%= @student.grade %></p>
						<hr>
						<p class="mb-auto"><strong>授業の曜日　</strong>    <%= @student.lesson_day %></p>
					</div>
				</div>
				<% if correct_student?(@student) %>
					<%= link_to edit_student_path(@student), class: "btn btn-block mt-2" do %>
						<i class="fas fa-check"></i>  編集する
					<% end %>
				<% elsif admin_logged_in? %>
					<%= link_to edit_by_teacher_student_path(@student), class: "btn btn-block mt-2" do %>
						<i class="fas fa-check"></i>  編集する
					<% end %>
				<% end %>
				<% if owner_logged_in? %>
					<%= link_to student_path(@student), method: :delete,
					data: { confirm: '本当に削除しますか？'},  class: "btn btn-block mt-2 bg-delete" do %>
						<i class="fas fa-trash"></i>  生徒を削除
					<% end %>
				<% end %>

				<% if student_logged_in? %>
				<div class="card text-center card-bg-pink my-3">
					<div class="card-body">
						<h3>お知らせ</h3>
						<h4 class="display-4">
							<i class="fas fa-clipboard"></i> <%= @student.news.released.count %>
						</h4>
						<%= link_to '見る', news_index_url, class: "btn btn-view-pink" %>
					</div>
				</div>
				<div class="card text-center card-bg-blue mb-3">
					<div class="card-body">
						<h3>指導報告書</h3>
						<h4 class="display-4">
							<i class="fas fa-pencil-alt"></i> <%= @student.reports.released.count %>
						</h4>
						<%= link_to '見る', student_reports_url(@student.id), class: "btn btn-view-blue" %>
					</div>
				</div>
				<div class="card text-center card-bg-green mb-3">
					<div class="card-body">
						<h3>お問い合わせ</h3>
						<h4 class="display-4">
							<i class="fas fa-envelope"></i> <%= @student.contacts.count %>
						</h4>
						<%= link_to '見る', contacts_url, class: "btn btn-view-green" %>
					</div>
				</div>
				<% end %>
      </aside>
      <div class="col-md-9 mt-3">
				<% if @reports.any? %>
					<h2>指導報告書</h2>
					<hr>
					<%= render @reports %>
					<p class="text-right">
						<%= link_to student_reports_url(@student.id), class: "link" do %>
							<i class="arrow fa fa-angle-right mt-1"></i>  もっと見る
						<% end %>
					</p>
				<% end %>
				<% if @news.any? %>
					<h2>お知らせ</h2>
					<hr>
					<%= render @news %>
					<p class="text-right">
						<%= link_to  news_index_url, class: "link" do %>
							<i class="arrow fa fa-angle-right mt-1"></i>  もっと見る
						<% end %>
					</p>
				<% end %>
      </div>
    </div>
  </div>
</section>
