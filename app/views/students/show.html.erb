<% provide(:title, @student.name)%>
<div class="container">
	<p>
		<strong>氏名</strong>
		<%= @student.name %>
	</p>
	<p>
		<strong>学年</strong>
		<%= @student.grade %>
	</p>
	<p>
		<strong>メールアドレス</strong>
		<%= @student.email %>
	</p>
	<%= link_to_if student_logged_in?, '編集する', edit_student_path(@student) , class: "btn" do end%>
</div>
