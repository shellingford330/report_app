<%= form_for(student) do |f| %>
	<%= render 'share/error_messages', obj: @student%>
	
	<div class="form-group">
		<%= f.label :name, '生徒名'%>
		<%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Name"%>
	</div>
	<div class="form-group">
		<%= f.label :email, 'メールアドレス'%>
		<%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
	</div>
	<div class="form-group">
		<%= f.label :password, 'パスワード'%>
		<%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password" %>
	</div>
	<div class="form-group">
		<%= f.label :password, '確認'%>
		<%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirmation" %>
	</div>
	<%= f.submit '保存', data: { confirm: '本当に保存してもよろしいですか？', disable_with: '処理中...'}, 
	class: "btn-outline-light btn-block bg-primary" %>

<% end %>