<%= form_for(contact) do |f| %>
  <%= render 'share/error_messages', obj: contact %>

  <div class="form-group">
    <%= f.label :teacher_id, '宛先講師' %>
    <%= f.collection_select :teacher_id, @admin, :id, :name, 
    { include_blank: '講師を選択して下さい' }, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :content, '本文' %>
    <%= f.text_area :content, :size => "10x9",class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
		<div class="row">
			<div class="col-md-4 mx-auto">
				<%= f.submit yield(:btn_text), data: { disable_with: '処理中...' }, class: "btn-contact btn-block btn-sub-contact" %>
			</div>
		</div>
	</div>
<% end %>


