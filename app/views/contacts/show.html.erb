<% provide(:title, "詳細") %>
<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h3 class="mt-4 mb-0"><strong>お問い合わせ</strong></h3>
      <hr>
      <div class="contact-wrapper">
        <div class="contact-title">
          「<%= @contact.title %>」
        </div>
        <div class="contact-info">
          宛先講師：<i class="fas fa-user-circle"></i>     <%= @contact.teacher.name %>
        </div>
        <div class="contact-info">
          書いた生徒：<i class="fas fa-user-circle"></i>     <%= @contact.student.name %>
        </div>
        <div class="contact-info">
          日付：<%= @contact.created_at.strftime('%Y年%m月%d日') %>
        </div>
        <div class="contact-content">
          <%= safe_join(@contact.content.split("\n"), tag(:br)) %>
        </div>
      </div>
    </div>
  </div>
</div>
