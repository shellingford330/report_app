<% provide(:title, @group.name) %>
<section class="mt-3">
	<div class="container">
		<h3 class="mt-4 mb-3 pl-3">
			<strong>グループ詳細</strong>
		</h3>

    <hr>

    <table class="table">
      <tr>
        <thead>
          <th style="width: 120px;" class="table-column">グループ名：</th>
          <th class="table-column"><%= @group.name %></th>
        </thead>
      </tr>
    </table>
    <table class="table">
      <thead>
        <tr>
          <th style="width: 20%;" class="table-column">グループ生徒：</th>
          <th class="table-column">学年</th>
          <th class="table-column">生徒氏名</th>
          <th class="table-column">授業の曜日</th>
        </tr>
      </thead>
      <tbody>
        <% Student.grades.each do |grade| %>
          <% judge = true %>
          <% @students.where(grade: grade).each do |student| %>
            <tr>
              <td class="border-top-0"></td>
              <% if judge%>
                <td><%= student.grade %></td>
              <% else %>
                <td class="border-top-0"></td>
              <% end %>
              <td><%= link_to student.name, student, class: "link" %></td>
              <td><%= student.lesson_day %></td>
              <% judge = false %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</section>