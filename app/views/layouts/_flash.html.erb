
<% if flash[:success] %>
  <script>
    notie.alert(1, '<%= flash[:success] %>', 3);
  </script>
<% elsif flash[:danger] %>
  <script>
    notie.alert(3, '<%= flash[:danger] %>.', 3);
  </script>
<% elsif flash[:notice] %>
  <script>
    notie.alert(4, '<%= flash[:notice] %>', 3);
  </script>
<% end %>
