<% provide(:title, "ログイン(講師)")%>
<div class="login">
	<%= form_for(@teacher, url: '/teachers/login', html: { class: 'login-form' , method: :post }) do |f| %>

		<h1 class="m-0">
			<%= link_to students_login_url do %>
				<%= image_tag 'logo.png', height: 70 %>
			<% end %>
		</h1>

		<p>(塾講師ログイン用)</p>

		<div class="form-group">
			<%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email address" %>
		</div>

		<div class="form-group">
			<%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password" %>
		</div> 

		<div class="form-group">
			<%= label_tag :remember_me do %>
				<%= check_box_tag :remember_me, 'yes', 'no' %>
				<span>パスワードを保存する</span>
			<% end %>
		</div>

		<%= f.submit 'ログインする', disable_with: '処理中...' , class: "btn btn-block btn-sub" %>

		<p class="m-2">
			<a href="#" class="link" data-toggle="modal" data-target="#addTeacherModal">
				新規登録の方はこちらから
			</a>
		</p>

	<% end %>
</div>


<div class="modal fade" id="addTeacherModal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content bg-brown">
			<div class="modal-header" style="background: #c9bdb9;">
				<h4 class="modal-title"><i class="fas fa-user-plus"></i> 講師登録</h4>
				<button class="close" data-dismiss="modal">
					<span>&times;</span>
				</button>
			</div>
			<%= form_for(@teacher, method: :post) do |f| %>
				<div class="modal-body">

					<%= render 'share/error_messages', obj: @teacher %>

					<div class="form-group">
						<%= f.label :name, '氏名'%>
						<%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Name" %>
					</div>

					<div class="form-group">
						<%= f.label :email, 'メールアドレス' %>
						<%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
					</div>

					<div class="form-group">
						<%= f.label :password, 'パスワード'%> 
						<%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password" %>
					</div>

					<div class="form-group">
						<%= f.label :password, 'パスワード確認（もう一度入力して下さい。）'%>
						<%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirmation" %>
					</div>
					
					<div class="row">
						<div class="col-md-4 mx-auto">
							<%= f.submit '登録する', data: { confirm: '本当に保存してもよろしいですか？', disable_with: '処理中...' }, 
								class: "btn btn-block btn-sub" %>
						</div>
					</div>

				</div>
				<% end %>

		</div>
	</div>
</div>